<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:clickable="true"
    tools:context="com.ui.screens.StatsScreenFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sublayout_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="12dp"
        android:background="@drawable/sublayout_shape">

        <com.ui.basic.buttons.icon_button.IconButton
            android:id="@+id/question_button"
            android:layout_width="40dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/headline"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="13dp" />

        <com.ui.basic.texts.text.Text
            android:id="@+id/headline"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            app:layout_constraintStart_toEndOf="@id/question_button"
            app:layout_constraintEnd_toStartOf="@id/goal_button"
            app:layout_constraintTop_toTopOf="@id/question_button"
            app:layout_constraintBottom_toBottomOf="@id/question_button"/>

        <com.ui.basic.buttons.icon_button.IconButton
            android:id="@+id/goal_button"
            android:layout_width="40dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toEndOf="@id/headline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="13dp" />

        <View
            android:id="@+id/line_view"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="10dp"
            android:background="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/headline" />

        <LinearLayout
            android:id="@+id/choose_month_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="horizontal"
            android:background="@color/black"
            app:layout_constraintTop_toBottomOf="@id/line_view"
            app:layout_constraintBottom_toTopOf="@id/chart">

            <com.ui.basic.buttons.icon_button.IconButton
                android:id="@+id/backward_button"
                android:layout_width="50dp"
                android:layout_height="60dp" />

            <com.ui.basic.texts.text.Text
                android:id="@+id/month_textview"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1" />

            <com.ui.basic.buttons.icon_button.IconButton
                android:id="@+id/forward_button"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:rotation="180"/>
        </LinearLayout>

        <com.ui.components.graph.component.Graph
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="35dp"
            app:layout_constraintTop_toBottomOf="@id/choose_month_container"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>