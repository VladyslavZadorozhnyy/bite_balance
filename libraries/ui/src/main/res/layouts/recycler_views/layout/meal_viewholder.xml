<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="700dp"
    android:layout_height="55dp"
    android:paddingBottom="5dp"
    android:orientation="horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:background="@color/white">

        <com.ui.basic.buttons.icon_button.IconButton
            android:id="@+id/meal_icon"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <com.ui.basic.texts.text.Text
            android:id="@+id/meal_text_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toEndOf="@id/meal_icon"
            app:layout_constraintEnd_toStartOf="@id/clock_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <com.ui.basic.buttons.icon_button.IconButton
            android:id="@+id/clock_icon"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toEndOf="@id/meal_text_view"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <com.ui.basic.texts.text.Text
            android:id="@+id/time_text_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toEndOf="@id/clock_icon"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.ui.basic.buttons.icon_button.IconButton
        android:id="@+id/delete_button_icon"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginHorizontal="10dp"/>

</LinearLayout>